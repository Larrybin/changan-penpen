{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "outDir": "dist/scripts",
        "module": "NodeNext",
        "target": "ES2022",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "allowJs": false,
        "declaration": false,
        "types": ["node"]
    },
    "include": [
        "scripts/**/*.ts",
        "src/services/translation.service.ts",
        "src/i18n/config.ts"
    ]
}
