{
  "metadata": {
    "version": "1.0.0",
    "description": "开发环境配置",
    "environment": "development",
    "last_updated": "2025-10-16"
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "ssl_enabled": false,
    "pool_size": 3,
    "max_connections": 10,
    "timeout": "30s",
    "connection_timeout": "10s",
    "idle_timeout": "60s",
    "health_check": {
      "enabled": false
    }
  },
  "security": {
    "encryption_algorithm": "AES-128",
    "session_timeout": "1d",
    "secret_rotation": "30d",
    "debug_enabled": true,
    "password_policy": {
      "min_length": 6,
      "require_special_chars": false,
      "require_numbers": false
    },
    "rate_limiting": {
      "enabled": false,
      "requests_per_minute": 1000,
      "burst_size": 100
    },
    "cors": {
      "enabled": true,
      "allowed_origins": ["http://localhost:3000", "http://localhost:3001", "http://127.0.0.1:3000"],
      "allowed_methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allowed_headers": ["Content-Type", "Authorization", "X-Requested-With", "X-Debug"],
      "credentials": true
    },
    "authentication": {
      "providers": ["google", "github", "dev"],
      "session_name": "next-cf-dev-session",
      "cookie_secure": false,
      "cookie_http_only": false,
      "same_site": "lax"
    }
  },
  "performance": {
    "cache_ttl": "5m",
    "compression_enabled": true,
    "cdn_enabled": false,
    "monitoring_level": "minimal",
    "response_timeout": "60s",
    "cache_control": {
      "public": "max-age=300",
      "private": "max-age=60"
    },
    "image_optimization": {
      "enabled": false,
      "quality": 75,
      "format": "auto"
    },
    "static_assets": {
      "cache_headers": {
        "max_age": "1h"
      }
    }
  },
  "features": {
    "feature_flags": {
      "new_ui": true,
      "advanced_analytics": true,
      "beta_features": true,
      "debug_mode": true,
      "maintenance_mode": false,
      "hot_reload": true
    },
    "experiments": {
      "enabled": true,
      "traffic_split": {
        "control": 50,
        "variant": 50
      }
    }
  },
  "services": {
    "external_apis": {
      "timeout": "60s",
      "retry_attempts": 2,
      "circuit_breaker": {
        "enabled": false,
        "failure_threshold": 10,
        "recovery_timeout": "120s"
      }
    },
    "notifications": {
      "enabled": false,
      "channels": ["console"],
      "queue_size": 100
    },
    "analytics": {
      "enabled": false,
      "provider": "internal",
      "sampling_rate": 1.0,
      "batch_size": 10,
      "flush_interval": "10s"
    }
  },
  "logging": {
    "level": "debug",
    "format": "pretty",
    "outputs": ["console"],
    "retention": "7d",
    "structured_logging": {
      "enabled": false,
      "include_request_id": false,
      "include_user_id": false,
      "include_trace_id": false
    },
    "error_tracking": {
      "enabled": false
    }
  },
  "backup": {
    "enabled": false
  },
  "monitoring": {
    "enabled": false,
    "metrics": {
      "enabled": false
    },
    "alerts": {
      "enabled": false
    },
    "health_checks": {
      "enabled": false
    }
  },
  "development": {
    "hot_reload": true,
    "auto_migrations": true,
    "seed_data": true,
    "mock_external_services": true,
    "debug_endpoints": {
      "enabled": true,
      "routes": ["/debug/config", "/debug/health", "/debug/metrics"]
    },
    "local_ssl": {
      "enabled": false,
      "cert_path": "./certs/localhost.crt",
      "key_path": "./certs/localhost.key"
    }
  },
  "testing": {
    "enabled": true,
    "test_database": {
      "name": "next_cf_app_test",
      "seed": true
    },
    "mock_data": {
      "enabled": true,
      "auto_generate": true
    }
  }
}